<h1>Присоедениться к евенту</h1>
<%= form_with model: @relation do |form| %>
  <p><%= form.label :name, "Введите имя евента" %></p>
  <p><%= form.text_field :name %></p>

  <p><%= form.label :password, "Введите пароль евента" %></p>
  <p><%= form.text_field :password %></p>

  <p><%= form.submit 'Присоедениться' %></p>
<% end %>
<p><%= link_to 'На мою страницу', current_user %></p>